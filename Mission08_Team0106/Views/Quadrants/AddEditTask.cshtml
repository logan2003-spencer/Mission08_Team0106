@* @model YourNamespace.Models.TaskViewModel *@
@{
    ViewBag.Title = Model.TaskId == 0 ? "Add Task" : "Edit Task";
}

<h2>@ViewBag.Title</h2>

@model HabitTask

@* Ensure the form is correctly closed *@
<form asp-action="SaveTask" method="post">
    @* Hidden Id Field *@
    <input type="hidden" asp-for="TaskId" />

    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Title" class="form-label">Title</label>
                <input type="text" asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="DueDate" class="form-label">Due Date</label>
                <input type="date" asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Quadrant" class="form-label">Quadrant</label>
                <select asp-for="Quadrant" class="form-select">
                    <option value="">Select Quadrant</option>
                    <option value="1">Quadrant 1</option>
                    <option value="2">Quadrant 2</option>
                    <option value="3">Quadrant 3</option>
                    <option value="4">Quadrant 4</option>
                </select>
                <span asp-validation-for="Quadrant" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-select">
                    <option value="">Select a Category</option>
                    @foreach (Category c in ViewBag.Categories)
                    {
                        <option value="@c.CategoryId">@c.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Completed" />
                    <input type="hidden" asp-for="Completed" />
                    <label class="form-check-label" asp-for="Completed">
                        Completed
                    </label>
                </div>
                <span asp-validation-for="Completed" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save Task</button>
    </div>
</form>


               
