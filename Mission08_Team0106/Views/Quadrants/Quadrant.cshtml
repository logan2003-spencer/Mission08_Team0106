@model List<HabitTask>
@{
    ViewData["Title"] = "Stephen Covey's Time Management Matrix";
}

<!-- Displays the current quadrants that calls from he database -->
<div class="container text-center">
    <!-- Title -->
    <h1 class="mt-4">Stephen Covey's Time Management Matrix</h1>
    <div class="row mt-3">
        <!-- Vertical Labels -->
        <div class="col-md-2 d-flex align-items-center justify-content-center border py-4 fw-bold" style="writing-mode: vertical-rl; text-orientation: mixed;">
            Important
        </div>
        <div class="col-md-10">
            <!-- Column Headers -->
            <div class="row fw-bold">
                <div class="col-md-6 border py-2">Urgent</div>
                <div class="col-md-6 border py-2">Not Urgent</div>
            </div>
            <!-- First Row (Important Tasks) -->
            <div class="row">
                <div class="col-md-6 border p-3">
                    <h4>Quadrant 1</h4>
                    <p><em>Crises, Pressing Problems, Projects with Deadlines</em></p>
                    @foreach (var task in Model.Where(t => t.Quadrant == 1 && !t.Completed))
                    {
                        <div class="task border p-2 mb-2">
                            <p>@task.Title</p>
                            <td><a class="btn btn-info" href="@Url.Action("Update", "Quadrants", new { id = @task.TaskId })">Edit</a></td>
                            <form method="post" asp-action="Delete">
                                <input type="hidden" name="id" value="@task.TaskId" />
                                <button type="submit" class="btn btn-danger btn-sm mt-1">Delete</button>
                            </form>
                        </div>
                    }
                </div>
                <div class="col-md-6 border p-3">
                    <h4>Quadrant 2</h4>
                    <p><em>Relationship Building, Planning, Recreation</em></p>
                    @foreach (var task in Model.Where(t => t.Quadrant == 2 && !t.Completed))
                    {
                        <div class="task border p-2 mb-2">
                            <p>@task.Title</p>
                            <td><a class="btn btn-info" href="@Url.Action("Update", "Quadrants", new { id = @task.TaskId })">Edit</a></td>
                            <form method="post" asp-action="Delete">
                                <input type="hidden" name="id" value="@task.TaskId" />
                                <button type="submit" class="btn btn-danger btn-sm mt-1">Delete</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Vertical Labels -->
        <div class="col-md-2 d-flex align-items-center justify-content-center border py-4 fw-bold" style="writing-mode: vertical-rl; text-orientation: mixed;">
            Not Important
        </div>
        <div class="col-md-10">
            <!-- Second Row (Not Important Tasks) -->
            <div class="row">
                <div class="col-md-6 border p-3">
                    <h4>Quadrant 3</h4>
                    <p><em>Interruptions, Some Phone Calls, Some Mail, Some Reports</em></p>
                    @foreach (var task in Model.Where(t => t.Quadrant == 3 && !t.Completed))
                    {
                        <div class="task border p-2 mb-2">
                            <p>@task.Title</p>
                            <td><a class="btn btn-info" href="@Url.Action("Update", "Quadrants", new { id = @task.TaskId })">Edit</a></td>
                            <form method="post" asp-action="Delete">
                                <input type="hidden" name="id" value="@task.TaskId" />
                                <button type="submit" class="btn btn-danger btn-sm mt-1">Delete</button>
                            </form>
                        </div>
                    }
                </div>
                <div class="col-md-6 border p-3">
                    <h4>Quadrant 4</h4>
                    <p><em>Busy Work, Some Phone Calls, Some Mail, Time Wasters</em></p>
                    @foreach (var task in Model.Where(t => t.Quadrant == 4 && !t.Completed))
                    {
                        <div class="task border p-2 mb-2">
                            <p>@task.Title</p>
                            <td><a class="btn btn-info" href="@Url.Action("Update", "Quadrants", new { id = @task.TaskId })">Edit</a></td>
                            <form method="post" asp-action="Delete">
                                <input type="hidden" name="id" value="@task.TaskId" />
                                <button type="submit" class="btn btn-danger btn-sm mt-1">Delete</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
